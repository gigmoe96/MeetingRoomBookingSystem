@model BookingSystem.ViewModel.DepartmentViewModel
<style>
    img {
        width: 20px;
        height: 20px;
    }

    button {
        background-color: white;
        border: none;
    }

        button:active {
            border: none;
        }

    .myDiv {
        padding-top: 20px;
        background-color: #eeeeee;
        border-top: 1px solid;
        border-bottom: 1px solid;
        border-color: darkgray;
    }

    .mylabel {
        margin-left: 10px;

    }
</style>
<script type="text/javascript">
    
</script>
@using (Html.BeginForm("CreateDepartment", "Department", FormMethod.Post))
{
    @Html.AntiForgeryToken()
   
    <div class="form-horizontal" style="width:100%;padding-left:0px;padding-top:20px">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                <button type="submit"><img src="~/Images/save.jpg" /></button>
                @*<button style="margin-left:30px"><img src="~/Images/refresh.png" /></button>*@
                @*<button style="margin-left:30px"><img src="~/Images/return.png" /></button>*@

            </div>

        </div>
        <div class="form-group myDiv">
            <div class="form-group">
                @Html.LabelFor(model => model.DepartmentCode, htmlAttributes: new { @class = "col-md-2 mylabel" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.DepartmentCode, new { htmlAttributes = new { @class = "form-control",@id="DeptCode" } })
                    @Html.ValidationMessageFor(model => model.DepartmentCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "col-md-2 mylabel" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control",@id="deptName"} })
                    @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = " col-md-2 mylabel" })
                <div class="col-md-9">
                    @Html.CheckBoxFor(model => model.Active, new { htmlAttributes = new { @class = "form-control" ,@id="active"} })
                    @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                </div>
            </div>


        </div>



    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
